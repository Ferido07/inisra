@model IEnumerable<Inisra_Web_App_MVC.Models.Application>

@{
    ViewBag.Title = "Applications";
}

<h2>Applications</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Job.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobSeeker.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobSeeker.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ApplicationDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Job.Title,"Details", "Jobs", new { id = item.JobID }, new { }  )
        </td>
        <td>
            @Html.ActionLink(item.JobSeeker.FullName, "Details", "JobSeekers", new { id = item.JobSeekerID }, new { } )
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobSeeker.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ApplicationDate)
        </td>
        <td>
            <!--Add accept or reject after database upgrade-->
        </td>
    </tr>
}

</table>
