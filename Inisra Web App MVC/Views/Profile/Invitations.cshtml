@model IEnumerable<Inisra_Web_App_MVC.DTOs.InvitationDto>

@{
    Layout = "~/Views/Shared/Profile.cshtml";
    ViewBag.Title = "Invitations";
    ViewBag.Invitations = "active";
}

<h2>Invitations</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <table class="table">

        <tr>
            <th>Company </th>
            <th>Job Title</th>
            <th>Invitation Date</th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.CompanyName, "Details", "Companies", new { id = item.CompanyId }, new { })
                </td>
                <td>
                    @Html.ActionLink(item.JobTitle, "Details", "Jobs", new { id = item.JobId }, new { })
                </td>
                <td>
                    @Html.DisplayFor(m => item.InvitationDate)
                </td>
                <td>
                    <button type="submit" name="" value="@item.JobId" class="btn btn-primary" formaction="" formmethod="post">Accept</button>
                    <button type="submit" name="" value="@item.JobId" class="btn btn-danger" formaction="" formmethod="post">Reject</button>
                </td>
            </tr>
        }

    </table>
}
<p>
    @Html.ActionLink("Back to Profile", "Index")
</p>

